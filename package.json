{
  "name": "my-finance-dash",
  "version": "0.3.0-alpha.4",
  "description": "MyFinance Dashboard - Automated Screenshot Tool",
  "main": "electron/main-nodejs.js",
  "homepage": "./",
  "scripts": {
    "screenshots": "node scripts/screenshot-automation.js",
    "screenshots:update": "node scripts/screenshot-automation.js --update",
    "screenshots:all": "node scripts/screenshot-automation.js --all",
    "screenshots:help": "echo 'Available commands: npm run screenshots, npm run screenshots:update, npm run screenshots:all'",
    "electron": "npx electron electron/main-nodejs.js",
    "electron-dev": "concurrently \"npm run backend-nodejs\" \"npm run frontend\" \"wait-on http://localhost:3001 && npx electron electron/main-nodejs.js\"",
    "electron-start": "node start-nodejs.js",
    "start-simple": "node start-simple.js",
    "start-minimal": "node start-minimal.js",
    "start-with-build": "node start-with-build.js",
    "start-nodejs": "node start-nodejs.js",
    "test-electron": "node test-electron-only.js",
    "test-react": "node test-react-electron.js",
    "test-manual": "node test-manual.js",
    "backend": "python manage.py runserver",
    "backend-nodejs": "cd backend-nodejs && npm start",
    "frontend": "cd frontend && PORT=3001 npm start",
    "build-frontend": "cd frontend && npm run build",
    "build-electron": "npm run build-frontend && npx electron-builder",
    "dist": "npm run build-frontend && npx electron-builder --publish=never",
    "release:patch": "npm version patch --no-git-tag-version && npm run release:build",
    "release:minor": "npm version minor --no-git-tag-version && npm run release:build",
    "release:major": "npm version major --no-git-tag-version && npm run release:build",
    "release:alpha": "npm version prerelease --preid=alpha --no-git-tag-version && npm run release:build",
    "release:beta": "npm version prerelease --preid=beta --no-git-tag-version && npm run release:build",
    "release:rc": "npm version prerelease --preid=rc --no-git-tag-version && npm run release:build",
    "build-backend": "cd backend-nodejs && npm install",
    "release:build": "npm run build-backend && npm run build-frontend && npx electron-builder --publish=never && npm run release:notes",
    "release:notes": "node scripts/generate-release-notes.js",
    "release:clean": "rm -rf dist/ && rm -rf frontend/build/",
    "release:prepare": "npm run release:clean && npm run test:quick && npm run release:build",
    "test": "node test-suite.js",
    "test:backend": "cd backend-nodejs && npm test",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:integration": "node test-nodejs-backend.js",
    "test:quick": "npm run test:backend",
    "test:coverage": "cd backend-nodejs && npm run test:coverage",
    "process:status": "node backend-nodejs/utils/processUtility.js status",
    "process:cleanup": "node backend-nodejs/utils/processUtility.js cleanup",
    "process:test-ports": "node backend-nodejs/utils/processUtility.js test-ports",
    "process:start": "node backend-nodejs/utils/processUtility.js start"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^28.3.3",
    "electron-builder": "^25.0.0",
    "playwright": "^1.40.0",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.myfinance.dashboard",
    "productName": "MyFi Dashboard",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "dmg": {
      "title": "MyFinance Dashboard"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend-nodejs/**/*",
      "backend-nodejs/utils/**/*",
      "!backend-nodejs/node_modules/**/*",
      "!backend-nodejs/uploads/**/*",
      "!backend-nodejs/backups/**/*",
      "!backend-nodejs/db.sqlite3",
      "!**/node_modules/**/*",
      "!**/.git/**/*",
      "!**/test_files/**/*",
      "!settings.json",
      "!db.sqlite3"
    ],
    "extraResources": [
      {
        "from": "backend-nodejs",
        "to": "backend-nodejs",
        "filter": [
          "**/*",
          "utils/**/*",
          "!node_modules/**/*",
          "!uploads/**/*",
          "!backups/**/*",
          "!db.sqlite3"
        ]
      },
      {
        "from": "settings.json",
        "to": "settings.json"
      },
      {
        "from": "db.sqlite3",
        "to": "db.sqlite3"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "CSV Files",
            "CFBundleTypeRole": "Editor",
            "LSItemContentTypes": [
              "public.comma-separated-values-text"
            ],
            "CFBundleTypeExtensions": [
              "csv"
            ]
          },
          {
            "CFBundleTypeName": "Excel Files",
            "CFBundleTypeRole": "Editor",
            "LSItemContentTypes": [
              "public.spreadsheet"
            ],
            "CFBundleTypeExtensions": [
              "xls",
              "xlsx"
            ]
          }
        ]
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "yobazy",
      "repo": "MyFinance"
    }
  },
  "keywords": [
    "finance",
    "dashboard",
    "automation",
    "screenshots",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}